<?xml version="1.0"?>
<launch>
  <!-- Setup Configuration -->
  <arg name="use_gazebo" default="false"/> <!-- for debugging-->
  <arg name="use_rviz"   default="false"/>
  <arg name="multi_robot_name" default=""/>

  <!-- Model Configuration -->
  <arg name="model" default="$(find aaamcl)/urdf/robot.urdf.xacro"/> <!-- default robot-->
  <arg name="x_pos" default="-2.0"/>
  <arg name="y_pos" default="-0.5"/>
  <arg name="z_pos" default=" 0.0"/>
  
  <!-- Parameter Server -->
  <param name="use_sim_time" value="true"/>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)"/>

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="50.0"/>
    <param name="tf_prefix" value="$(arg multi_robot_name)"/>
  </node>
  
  <!-- Launch Gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch" if="$(arg use_gazebo)"> <!-- launch file for bringup, recommend to leave -->
    <arg name="world_name"   value="$(find turtlebot3_gazebo)/worlds/turtlebot3_world.world"/>
    <arg name="paused"       value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui"          value="true"/>
    <arg name="headless"     value="false"/>
    <arg name="debug"        value="false"/>
  </include>

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model robot -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" if="$(arg use_gazebo)"/>

  <!-- Launch RViz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find aaamcl)/config/amcl.rviz" if="$(arg use_rviz)"/>
</launch>